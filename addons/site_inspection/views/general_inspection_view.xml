<!-- Path: addons\site_inspection\views\general_inspection_view.xml -->

<odoo>

    <!-- General Inspection Form -->

    <record id="view_inspection_form" model="ir.ui.view">
        <field name="name">inspection.record.form</field>
        <field name="model">inspection.record</field>
        <field name="arch" type="xml">
            <form string="Inspection Record">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="engineer_id"/>
                        <field name="customer_id"/>
                        <field name="customer_address_id"/>
                        <field name="date"/>
                        <field name="time"/>
                        <field name="location"/>
                        <field name="customer_comments"/>
                        <field name="result"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- General Inspection Tree -->

    <record id="view_inspection_tree" model="ir.ui.view">
        <field name="name">inspection.record.tree</field>
        <field name="model">inspection.record</field>
        <field name="arch" type="xml">
            <tree string="Inspection Records">
                <field name="name"/>
                <field name="engineer_id"/>
                <field name="customer_id"/>
                <field name="date"/>
                <field name="time"/>
                <field name="location"/>
                <field name="result"/>
            </tree>
        </field>
    </record>

    <!-- General Inspection Kanban -->

    <record id="view_inspection_kanban" model="ir.ui.view">
        <field name="name">inspection.record.kanban</field>
        <field name="model">inspection.record</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="engineer_id"/>
                <field name="customer_id"/>
                <field name="date"/>
                <field name="time"/>
                <field name="location"/>
                <field name="result"/>
            </kanban>
        </field>
    </record>

    <!-- General Inspection Action -->

    <record id="inspection_menu_action" model="ir.actions.act_window">
        <field name="name">General Inspection</field>
        <field name="res_model">inspection.record</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

   
</odoo>
