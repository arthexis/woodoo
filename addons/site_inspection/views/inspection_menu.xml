<!-- Path: addons\site_inspection\views\inspection_menu.xml -->

<odoo>
    <record id="inspection_menu_action" model="ir.actions.act_window">
        <field name="name">General Inspection</field>
        <field name="res_model">inspection.record</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Electrical Inspection -->

    <record id="electrical_inspection_menu_action" model="ir.actions.act_window">
        <field name="name">Electrical Inspection</field>
        <field name="res_model">electrical.inspection.record</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="inspection_menu" name="Inspection" 
        parent="base.menu_sales" action="inspection_menu_action"/>
    <menuitem id="electrical_inspection_menu" name="Electrical Inspection" 
        parent="inspection_menu" action="electrical_inspection_menu_action"/>

</odoo>
