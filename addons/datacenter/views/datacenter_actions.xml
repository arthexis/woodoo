<odoo>

    <record id="action_duplicate_app_server" model="ir.actions.server">
        <field name="name">Duplicate Server</field>
        <field name="model_id" ref="datacenter.app.server"/> <!-- Change this to your model -->
        <field name="state">code</field>
        <field name="code">
        <![CDATA[
        for record in records:
            record.copy()
        ]]>
        </field>
    </record>

    <!-- Add the action to the "Action" dropdown -->
    <record id="ir_values_action_duplicate_app_server" model="ir.values">
        <field name="name">Duplicate Server</field>
        <field name="model">datacenter.app.server</field> <!-- Change this to your model -->
        <field name="key2">client_action_multi</field>
        <field name="value" eval="'ir.actions.server,' + str(ref('action_duplicate_app_server'))"/>
    </record>

</odoo>
